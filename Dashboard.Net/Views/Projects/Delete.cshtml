@{
    ViewData["Title"] = $"Delete Project: {Model.Name} - The Platform Thing";
}
@model Dashboard.Net.Models.ProjectViewModel
<main id="content" role="main">
    <div class="grid-row">
        <div class="column-full">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { autocomplete = "off" }))
            {
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => Model.Id)
                @Html.HiddenFor(m=>Model.Name)

                <h1 class="heading-large">
                    <div>Delete Project</div>
                    <div style="float:right">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </div>
                </h1>
                <h2 style="color:red;font-size:22px;"><span style="font-size:28px;padding-right:10px;" class="glyphicon glyphicon-warning-sign"></span><span class="destroy-description">Warning: Please read the following carefully before proceeding!</span></h2>
                <p>Are you <b>ABSOLUTELY</b> sure? This action <b>CANNOT</b> be undone. This will permanently delete the team project <b>@Model.Name</b>. Deletion includes all work items, source control items, teams, builds, and other artifacts within the team project.</p>
                <fieldset>
                    <legend class="visuallyhidden">Project Details</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Please type the name of the team project to confirm.", htmlAttributes: new { @class = "form-label col-md-10" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "error-danger" })
                        <div>
                            <input class="form-control" name="projectName" />
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <div class="form-group floatleft">
                        <br>
                        <a href="@Url.Action("Edit",new { Model.Id})" class="link-button">Cancel</a>
                        <input type="submit" class="button" name="command" value="Delete Project" title="Delete this project" style="float:right" onclick="if (!confirm('Are you sure you want to delete this project?')) return false;"/>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</main>

