    ViewBag.assetsPath = Url.Content("/public/govuk_template/assets");

    var appTitle = "";
    var title = !string.IsNullOrEmpty(ViewBag.Title) ? ViewBag.Title : "Hello World";
    var documentTitle = string.Format("{0} - {1}", title, "GOV.UK");
}
